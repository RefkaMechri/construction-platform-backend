generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      Role
  tenantId   Int?
  tenant     Tenant?   @relation(fields: [tenantId], references: [id])

  @@map("users")
}
enum Role {
  SUPER_ADMIN
  ADMIN
  DIRECTEUR
  PROJECT_MANAGER
  CONDUCTEUR_DE_TRAVAUX
  RESOURCE_MANAGER
  BUDGET_MANAGER
}
model Tenant {
  id        Int          @id @default(autoincrement())
  name      String
  slug      String       @unique
  email     String?      @unique //  optionnel (contact entreprise)
  phone     String?
  country   String?
  address   String?
  plan      TenantPlan   @default(Basic)
  status    TenantStatus @default(ACTIVE)
  modules   String[]     @default([])
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  users     User[]

  @@map("tenants")
}

enum TenantPlan {
  Basic
  Pro
  Enterprise
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
}
